<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chat Room</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        box-sizing: border-box;
        font-family: "Inter", sans-serif;
      }

      body {
        margin: 0;
        padding: 0;
        background: #f2f3f5;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      .chat-container {
        width: 100%;
        max-width: 600px;
        height: 90vh;
        background: white;
        border-radius: 10px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        overflow: hidden;
      }

      .chat-header {
        background: #4f46e5;
        color: white;
        padding: 1rem;
        font-size: 1.25rem;
        text-align: center;
      }

      .chat-display {
        flex: 1;
        padding: 1rem;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        gap: 10px;
      }

      .message {
        max-width: 70%;
        padding: 10px 14px;
        border-radius: 16px;
        line-height: 1.4;
        font-size: 0.95rem;
        word-wrap: break-word;
      }

      .message.user {
        align-self: flex-end;
        background-color: #e0f7fa;
        border-bottom-right-radius: 0;
      }

      .message.stranger {
        align-self: flex-start;
        background-color: #e8eaf6;
        border-bottom-left-radius: 0;
      }

      .message strong {
        color: #4f46e5;
        display: block;
        margin-bottom: 4px;
        font-size: 0.85rem;
      }

      .chat-input {
        display: flex;
        border-top: 1px solid #ccc;
      }

      .chat-input input {
        flex: 1;
        padding: 14px;
        border: none;
        font-size: 1rem;
        outline: none;
      }

      .chat-input button {
        padding: 14px 20px;
        background: #4f46e5;
        color: white;
        border: none;
        cursor: pointer;
        font-weight: 600;
        transition: background 0.2s ease;
      }

      .chat-input button:hover {
        background: #3730a3;
      }
    </style>
  </head>

  <body>
    <div class="chat-container">
      <div class="chat-header">ðŸ’¬ Welcome, <%= username %>!</div>

      <div id="display" class="chat-display"></div>

      <div class="chat-input">
        <input type="text" placeholder="Type a message..." id="textfild" />
        <button id="submit">Send</button>
      </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
      const username = "<%= username %>";
      const socket = io();
      const textField = document.getElementById("textfild");
      const btn = document.getElementById("submit");
      const display = document.getElementById("display");

      btn.addEventListener("click", () => {
        const msg = textField.value.trim();
        if (!msg) return;

        const messageData = { text: msg, sender: username };
        addMessage(messageData, "user");
        socket.emit("user_message", messageData);
        textField.value = "";
      });

      socket.on("user_message", (data) => {
        addMessage(data, "stranger");
      });

      function addMessage(data, type) {
        const msgBox = document.createElement("div");
        msgBox.className = `message ${type}`;
        if (data.sender == username) {
          msgBox.innerHTML = `<strong>You</strong>${data.text}`;
        } else {
          msgBox.innerHTML = `<strong>${data.sender}</strong>${data.text}`;
        }
        display.appendChild(msgBox);
        display.scrollTop = display.scrollHeight;
      }
    </script>
  </body>
</html>
